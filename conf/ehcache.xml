<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"
            overflowToDisk="true" />

    <cache name="slackUserCache"
           maxElementsInMemory="0"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           overflowToDisk="true" />

    <cache name="publicHolidayCache"
           maxElementsInMemory="0"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="2592000"
           overflowToDisk="true" />
</ehcache>